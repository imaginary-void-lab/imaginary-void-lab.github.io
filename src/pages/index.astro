</Layout>

<style>
  :root {
    --left: min(200px, calc(100svw * 0.1));
    --tile-size: min(150px, calc(100vh * 0.15));
    --ja-font-size: min(100px, calc(100vh * 0.1));
    --en-font-size: min(100px, calc(100vh * 0.12));
  }

  #p100svh {
    height: 100svh;
    position: fixed;
    pointer-events: none;
  }

  .anchor {
    display: block;
    margin-top: -120px;
    padding-top: 120px;
  }

  #axis {
    pointer-events: none;
    position: absolute;
    --width: 15px;
    width: 100%;
    height: 100%;
    z-index: 1200;
  }

  #v-line {
    background-color: var(--primary-black);

    position: fixed;
    top: 30px;
    bottom: -100px;
    left: calc(var(--left) - var(--width) / 2);

    width: var(--width);
    background-color: var(--primary-black);
  }

  #v-line::before {
    content: "";
    display: block;
    background-color: var(--primary-black);
    width: 40px;
    height: 60px;
    position: absolute;
    top: -30px;
    left: calc(-20px + var(--width) / 2);
    clip-path: polygon(50% 0%, 0% 100%, 50% 90%, 100% 100%);
  }

  #h-line-wrapper {
    position: sticky;
    top: -1px;
    height: 101px;
    margin-top: calc(100svh - 80px - var(--width) / 2 - 100px);
    width: calc(100% - 30px);
  }

  #h-line {
    position: absolute;
    bottom: calc(-1 * var(--width) + 1px);
    background-color: var(--primary-black);
    width: 100%;
    height: var(--width);
  }

  #h-line::before {
    content: "";
    display: block;
    background-color: var(--primary-black);
    width: 60px;
    height: 40px;
    position: absolute;
    top: calc(-20px + var(--width) / 2);
    right: -30px;
    clip-path: polygon(0% 0%, 100% 50%, 0% 100%, 10% 50%);
  }

  #global-nav {
    position: fixed;
    width: 100%;
    height: 100px;
    display: flex;
    z-index: 1000;
    background-color: var(--primary-white);
  }

  #nav-main {
    flex-grow: 1;
    flex-shrink: 1;
    margin-left: calc(var(--left) + 40px);
    display: flex;
    align-items: center;
    align-content: center;
    flex-wrap: wrap;
    gap: 5px 20px;
  }

  #nav-main a {
    color: var(--primary-black);
    text-decoration: none;
    font-size: min(1.8em, calc(6svw));
    font-weight: 600;
  }

  #nav-name {
    container: nav-name / inline-size;
    flex-basis: 100%;
    min-width: 70px;
    flex-shrink: 100000000000;
    display: flex;
    justify-content: right;
  }

  #nav-name a {
    margin-right: 15px;
    margin-bottom: 5px;
    font-size: 1.2em;
    text-shadow: 1px 1px 0px var(--primary-black);
    align-self: flex-end;
  }

  @container nav-name (max-width: 200px) {
    .small {
      display: contents;
    }

    .small a {
      margin-bottom: 20px !important;
      margin-right: 5px !important;
    }

    .large {
      display: none;
    }
  }

  @container nav-name (min-width: 200px) {
    .small {
      display: none;
    }
    .large {
      display: contents;
    }
  }

  #nav-name a {
    color: var(--accent-color);
    text-decoration: none;
    font-weight: 700;
    font-family: "Open Sans", "Shippori Antique";
  }

  #first-view {
    position: relative;
    z-index: 1100;
    top: 0;
    width: 100%;
    height: 100svh;
    pointer-events: none;
  }

  #grid {
    position: absolute;
    width: 100%;
    height: 100%;
    background-color: var(--primary-black);
    -webkit-mask: url("./grid.svg");
    -webkit-mask-size: var(--tile-size);
    -webkit-mask-position: var(--left) calc(100svh - 80px);
  }

  #company-name {
    pointer-events: all;
    margin: 0;
  }

  #company-name-en {
    font-size: var(--en-font-size);
    font-family: "Open Sans";
    font-weight: 700;
    line-height: var(--tile-size);
    color: var(--accent-color);
    white-space: nowrap;

    position: absolute;
    display: inline-block;
    left: var(--left);
    right: 0;
    overflow-y: hidden;
    overflow-x: auto;

    margin-top: calc(var(--tile-size) * 0.1);
    padding-left: 50px;
    text-shadow: 3px 3px 0px var(--primary-black);
  }

  #company-name-ja {
    font-size: var(--ja-font-size);
    font-family: "Shippori Antique";
    font-weight: 700;
    line-height: var(--tile-size);
    color: var(--accent-color);
    white-space: nowrap;

    position: absolute;
    display: inline-block;
    left: var(--left);
    right: 0;
    bottom: 70px;
    overflow-y: hidden;
    overflow-x: auto;

    padding-left: 50px;
    padding-bottom: 10px;
    text-shadow: 3px 3px 0px var(--primary-black);
  }

  #contents {
    margin-top: 50px;
    margin-left: calc(var(--left) + 8svw);
    margin-right: calc(8svw);
    margin-bottom: 60svh;
  }

  #contents h2 {
    font-size: 1.8rem;
    border-bottom: 1px solid var(--primary-black);
  }

  #contents h3 {
    font-size: 1.5rem;
  }

  #contents p {
    max-width: 800px;
    text-indent: 1em;
  }

  footer {
    text-align: center;
    margin-bottom: 20px;
  }
</style>
