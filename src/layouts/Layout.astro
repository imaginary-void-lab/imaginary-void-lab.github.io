---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <slot />
  </body>
</html>
<style is:global>
  @import url("https://fonts.googleapis.com/css2?family=Open+Sans:wght@700&family=Shippori+Antique&display=swap");
  :root {
    --accent-color: #626df5;
    --secondary-accent-color: #0eed53;
    --secondary-accent-color-rgb: 14, 237, 83;
    --primary-black: #2d316f;
    --primary-white: #f3f5e7;
  }
  html {
    font-family: system-ui, sans-serif;
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    height: 100%;
    position: relative;

    color: var(--primary-black);
    background-color: var(--primary-white);
  }
</style>
